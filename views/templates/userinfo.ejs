<html>
  <head>
    <%- include('header.ejs') %>
  </head>
  <body>
    <div class="card-body">
      <div class="form-group">
        <label for="username">用户名</label>
        <input
          type="email"
          class="form-control"
          id="username"
          value="<%= uinfo.uname %>"
        />
        <input
          type="text"
          style="display: none;"
          id="uid"
          value="<%= uinfo.uid %>"
        />
      </div>
      <div class="form-group">
        <label for="pwd">新密码</label>
        <input type="password" class="form-control" id="pwd" />
      </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
      <button onclick="submit1()" class="btn btn-primary">提交</button>
    </div>

    <%- include('script.ejs') %>

    <script src="/javascripts/common.js"></script>
    <script>
      function submit1() {
        var uid = $("#uid").val();
        var username = $("#username").val();
        var pwd = $("#pwd").val();
        console.log(uid, username, pwd);

        $.ajax({
          url: "/index/user/edit",
          type: "POST",
          data: {
            uid: uid,
            username: username,
            pwd: pwd,
          },
          success: function (data) {
            console.log(data);
            layer.msg("用户信息已经修改请重新登录");
          },
        });
      }
    </script>
  </body>
</html>
